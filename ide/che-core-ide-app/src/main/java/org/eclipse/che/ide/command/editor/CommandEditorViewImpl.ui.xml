<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:che='urn:import:org.eclipse.che.ide.ui'>
    <ui:with field='messages' type='org.eclipse.che.ide.command.editor.EditorMessages'/>
    <ui:with field='resources' type='org.eclipse.che.ide.command.CommandResources'/>
    <ui:style>
        @eval partBackground org.eclipse.che.ide.api.theme.Style.theme.partBackground();
        @eval tabsPanelBackground org.eclipse.che.ide.api.theme.Style.theme.tabsPanelBackground();
        @eval toolbarActionGroupShadowColor org.eclipse.che.ide.api.theme.Style.getToolbarActionGroupShadowColor();
        @eval toolbarActionGroupBackgroundColor org.eclipse.che.ide.api.theme.Style.getToolbarActionGroupBackgroundColor();
        @eval toolbarActionGroupBorderColor org.eclipse.che.ide.api.theme.Style.getToolbarActionGroupBorderColor();
        @eval toolbarActionGroupShadowColor org.eclipse.che.ide.api.theme.Style.getToolbarActionGroupShadowColor();
        @eval blueIconColor org.eclipse.che.ide.api.theme.Style.theme.getBlueIconColor();
        @eval greenIconColor org.eclipse.che.ide.api.theme.Style.theme.getSuccessEventColor();

        .mainPanel {
            background-color: partBackground;
        }

        .header {
            height: 38px;
            padding-top: 5px;
            background-color: tabsPanelBackground;
        }

        .tabsPanel {
            width: 285px;
            height: 30px;
            background-color: toolbarActionGroupBackgroundColor;
            float: left;
            box-shadow: 0 1px 0 0 toolbarActionGroupShadowColor;
            border: 1px solid toolbarActionGroupBorderColor;
            border-radius: 3px;
            margin-left: 50px;
            margin-right: 20px;
        }

        .switcher {
            padding: 5px;
        }

        .button {
            float: left;
            margin: 5px 0 0 10px;
        }

        .button > svg {
            width: 16px;
            height: 16px;
            margin: 1px;
        }

        .button > svg g,
        .button > svg g g path {
            fill: blueIconColor;
        }

        .button:hover > svg g,
        .button:hover > svg g g path {
            fill: greenIconColor;
        }
    </ui:style>

    <g:DockLayoutPanel addStyleNames="{style.mainPanel}">
        <g:north size="44">
            <g:FlowPanel addStyleNames="{style.header}">
                <g:FlowPanel addStyleNames="{style.tabsPanel}">
                    <che:radiobuttongroup.RadioButtonGroup ui:field="pagesSwitcher"
                                                           addStyleNames="{style.switcher}"
                                                           debugId="command-editor-pages-switcher"/>
                </g:FlowPanel>
                <g:Button ui:field="saveButton"
                          text="{messages.buttonSaveText}"
                          addStyleNames="{style.button}"
                          debugId="command-editor-button-save"/>
                <g:Button ui:field="testButton"
                          addStyleNames="{style.button}"
                          debugId="command-editor-button-test">
                </g:Button>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DeckPanel ui:field="pagesPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
